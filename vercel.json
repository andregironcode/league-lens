{
  "functions": {
    "api/highlightly.js": {
      "maxDuration": 30
    },
    "api/cron/update-database.js": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/update-database",
      "schedule": "*/15 * * * *"
    }
  ],
  "rewrites": [
    {
      "source": "/api/highlightly/(.*)",
      "destination": "/api/highlightly?path=$1"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ]
} 